# OpenClaw Railway Template v3.0 - Environment Variables

# Required: Password for accessing /setup page
SETUP_PASSWORD=your-secure-password-here

# Server Configuration
PORT=8080

# Data Directories (usually set automatically by Railway)
OPENCLAW_STATE_DIR=/data/.openclaw
OPENCLAW_WORKSPACE_DIR=/data/workspace

# Web TUI Configuration
ENABLE_WEB_TUI=true
TUI_IDLE_TIMEOUT_MS=300000
TUI_MAX_SESSION_MS=1800000

# Debug logging
OPENCLAW_TEMPLATE_DEBUG=false

# Pre-configured API Keys (optional - can also be set via setup wizard)
# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_AUTH_TOKEN=

# OpenAI
OPENAI_API_KEY=

# Google
GOOGLE_API_KEY=

# OpenRouter
OPENROUTER_API_KEY=

# Vercel AI Gateway
VERCEL_AI_API_KEY=

# Other providers
MOONSHOT_API_KEY=
ZAI_API_KEY=
MINIMAX_API_KEY=
QWEN_API_KEY=
SYNTHETIC_API_KEY=
OPENCODEZEN_API_KEY=

# Gateway token (auto-generated if not set)
OPENCLAW_GATEWAY_TOKEN=
